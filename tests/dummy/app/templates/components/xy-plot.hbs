{{#d3-svg class="axis" width=500 height=500}}
  <defs>
    {{#d3-clip-path}}
      <rect x=0 y=0 width=455 height=440></rect>
    {{/d3-clip-path}}
  </defs>
  {{d3-grid class="grid" orientation="bottom" scale=plotter.xScale width=450 height=450 translateX=xPadding yOffset=yPadding}}
  {{d3-grid class="grid" orientation="left" scale=plotter.yScale width=450 height=450 translateX=xPadding yOffset=yPadding}}
  {{d3-axis class="x-axis" orientation="bottom" scale=plotter.xScale translateX=xPadding translateY=475}}
  {{d3-axis class="y-axis" orientation="left" scale=plotter.yScale translateX=xPadding translateY=yPadding}}
  {{d3-plot plotter=plotter translateX=xPadding translateY=yPadding}}
{{/d3-svg}}

<br>
X Max {{input value=xMax}}
<br>
Y Max {{input value=yMax}}
