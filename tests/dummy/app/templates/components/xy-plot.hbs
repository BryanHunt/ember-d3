{{#d3-svg width=550 height=550}}
  <defs>
    {{#d3-clip-path}}
      <rect x=85 y=25 width=450 height=450></rect>
    {{/d3-clip-path}}
  </defs>
  {{d3-grid class="grid" orientation="bottom" scale=xScale width=450 height=450 transform="translate(45,485)"}}
  {{d3-grid class="grid" orientation="left" scale=yScale width=450 height=450 transform="translate(45,35)"}}
  {{d3-axis class="axis" orientation="bottom" scale=xScale transform="translate(45,485)"}}
  {{d3-axis class="axis" orientation="left" scale=yScale transform="translate(45,35)"}}
  {{d3-text value="X-Y Chart" x=270 y=15}}
  {{d3-text value="X Axis" x=270 y=530}}
  {{d3-text value="Y Axis" x=-260 y=15 transform="rotate(-90)"}}
  {{#d3-plot transform="translate(45,35)"}}
    {{d3-line xScale=xScale yScale=yScale data=data}}
    {{#if showDots}}
      {{d3-circle xScale=xScale yScale=yScale data=data}}
    {{/if}}
  {{/d3-plot}}
{{/d3-svg}}

<br>
X Max {{input value=xMax}}
<br>
Y Max {{input value=yMax}}
<br>
{{input type="checkbox" checked=showDots}}Show Dots
