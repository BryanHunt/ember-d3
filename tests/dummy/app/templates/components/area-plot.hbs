{{#d3-svg width=550 height=550}}
  <defs>
    {{#d3-clip-path}}
      <rect x=0 y=0 width=455 height=440></rect>
    {{/d3-clip-path}}
  </defs>
  {{d3-grid class="grid" orientation="bottom" scale=xScale width=450 height=450 transform="translate(35,475)"}}
  {{d3-grid class="grid" orientation="left" scale=y1Scale width=450 height=450 transform="translate(35,25)"}}
  {{d3-axis class="axis" orientation="bottom" scale=xScale transform="translate(35,475)"}}
  {{d3-axis class="axis" orientation="left" scale=y1Scale transform="translate(35,25)"}}
  {{#d3-plot transform="translate(35,25)"}}
    {{d3-area xScale=xScale y0Scale=y0Scale y1Scale=y1Scale data=data}}
    {{d3-line xScale=xScale yScale=y1Scale data=data}}
    {{d3-text value="X Axis" x=225 y=490}}
    {{d3-text value="Y Axis" x=-225 y=-25 transform="rotate(-90)"}}
  {{/d3-plot}}
{{/d3-svg}}

<br>
X Max {{input value=xMax}}
<br>
Y Max {{input value=yMax}}
