{{#d3-svg width=550 height=500}}
  <defs>
    {{#d3-clip-path}}
      <rect x=-5 y=0 width=455 height=440></rect>
    {{/d3-clip-path}}
  </defs>
  {{d3-axis class="axis" orientation="bottom" scale=xScale translateX=25 translateY=475}}
  {{d3-axis class="axis" orientation="left" scale=yScale translateX=25 translateY=25}}
